# Campus Music - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection URL
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Individual PostgreSQL connection parameters (optional if DATABASE_URL is set)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=campus_music

# ===========================================
# SESSION & SECURITY (Required)
# ===========================================
# Secret key for session encryption (generate a random 32+ character string)
SESSION_SECRET=your-secure-session-secret-key-here

# Node environment (development | production)
NODE_ENV=development

# ===========================================
# STRIPE PAYMENTS (Required for tips feature)
# ===========================================
# Get these from dashboard.stripe.com
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# S3-COMPATIBLE STORAGE (Required for uploads)
# ===========================================
# Works with AWS S3, DigitalOcean Spaces, MinIO, Backblaze B2, etc.
# If not configured, falls back to local filesystem storage (development only)

S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1

# Optional: Custom S3 endpoint for non-AWS providers
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# ===========================================
# EMAIL (Optional - for future email verification)
# ===========================================
# SMTP settings for sending emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@campusmusic.com

# ===========================================
# DEPLOYMENT (Required for production)
# ===========================================
# Server port (default: 5000)
PORT=5000

# Base URL for the application (used for Stripe redirects, webhooks, etc.)
APP_URL=https://your-app-domain.com
